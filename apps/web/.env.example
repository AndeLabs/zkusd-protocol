# ============================================================================
# zkUSD Web App Environment Variables
# Copy this file to .env.local and fill in your values
# ============================================================================

# =============================================================================
# Network Configuration
# =============================================================================

# Network to use: testnet4 or mainnet
NEXT_PUBLIC_NETWORK=testnet4

# =============================================================================
# API Endpoints
# =============================================================================

# Bitcoin Explorer API (Blockstream/Mempool)
NEXT_PUBLIC_EXPLORER_API_URL=https://mempool.space/testnet4/api

# Bitcoin Explorer URL (for links)
NEXT_PUBLIC_EXPLORER_URL=https://mempool.space/testnet4

# Charms Prover URL (optional, enables real transactions)
# Leave empty for demo mode with simulated transactions
NEXT_PUBLIC_PROVER_URL=

# =============================================================================
# Sentry Error Tracking (Optional)
# =============================================================================

# Get your DSN from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# Vercel Deployment (CI/CD)
# =============================================================================

# These are automatically set by Vercel, but needed for local development
# VERCEL_TOKEN=
# VERCEL_ORG_ID=
# VERCEL_PROJECT_ID=

# =============================================================================
# Protocol Parameters (defaults shown)
# =============================================================================

# Minimum Collateral Ratio (basis points, 11000 = 110%)
# NEXT_PUBLIC_MCR=11000

# Critical Collateral Ratio (basis points, 15000 = 150%)
# NEXT_PUBLIC_CCR=15000

# Minimum debt amount (satoshis, 10_00000000 = 10 zkUSD)
# NEXT_PUBLIC_MIN_DEBT=1000000000
